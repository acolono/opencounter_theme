<div class="clients-list">
    <table class="table table-hover">
        <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Value</th>
            <th>Status</th>
            <th>Password</th>
            <th colspan="2" align="center">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% if data %}

            {% for row in data %}
                <tr>
                    <td>{{ row.client_id }}</td>
                    <td>{{ row.user_id }}</td>
                    <td>{{ row.grant_types }}</td>
                    <td>{{ row.client_secret }}</td>
                    <td>{{ row.scope }}</td>
                    <td>{{ row.redirect_uri }}</td>
                    <td>
                        {% include "@atoms/05-buttons/01-button.twig" with {text: 'View/Edit', url: '/admin/clients/' ~ row.client_id } %}
                    </td>
                    <td>
                        <form action="/clients" method="POST">
                            {% include "@atoms/02-forms/_input.twig" with {attributes: {classes: 'button btn btn-danger', name: 'Delete',value: 'Delete', type: 'submit', attributes: 'button'}} only %}

                            <input type="hidden" id="delete" name="delete" value="1">
                            <input type="hidden" id="counter_id" name="counter_id" value="{{ row.counter_id }}">
                        </form>
                    </td>
                </tr>

            {% endfor %}
        {% else %}
            <p>No records found</p>
        {% endif %}
        </tbody>
    </table>
</div>