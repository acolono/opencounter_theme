{% extends "04-layouts/00-default.twig" %}

{% block head %}
    {{ parent() }}
    <style type="text/css">
        .important {
            color: #336699;
        }
    </style>
{% endblock %}

{% block content %}
    <h1>Add User Form</h1>
    <div>{{ value }}</div>

    <form action="{{ path_for('admin.user.add', { 'name': name }) }}" method="post"> <!-- Used route name in action -->
        <fieldset>
            <input name="client_id" type="name" placeholder="client_id">
            <input name="client_secret" type="value" placeholder="client_secret">
            <input name="redirect_uri" placeholder="/redirect_uri">
            <input name="grant_types" placeholder="/redirect_uri">
            <input name="scopes" placeholder="/redirect_uri">
            <input name="user_id" placeholder="/redirect_uri">
        </fieldset>
        <input id="submit" type="submit" class="button">
    </form>
{% endblock %}

